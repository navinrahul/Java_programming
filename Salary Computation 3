import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

import java.util.Scanner;

public class GrossSalaryCalculator {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        double basic;
        if (scanner.hasNextDouble()) {
            basic = scanner.nextDouble();
        } else {
            System.out.println("Invalid input");
            scanner.close();
            return;
        }

        double hra, da;
        if (basic < 15000) {
            hra = 0.15 * basic;
            da  = 0.90 * basic;
        } else {
            hra = 5000.0;
            da  = 0.98 * basic;
        }

        double grossSalary = basic + hra + da;
        System.out.printf("%.2f%n", grossSalary);
        scanner.close();
    }
}
